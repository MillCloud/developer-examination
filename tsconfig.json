{
  "extends": "@tsconfig/node18",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["DOM", "ESNext"],
    "target": "ESNext",
    "resolveJsonModule": true,
    "types": ["vite/client"]
  },
  "include": [
    "**/.*.js",
    "**/.*.cjs",
    "**/.*.mjs",
    "**/.*.ts",
    "**/.*.cts",
    "**/.*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.ts",
    "**/*.cts",
    "**/*.mts",
    "docs/.vitepress/*.ts"
  ],
  "exclude": ["node_modules"]
}
